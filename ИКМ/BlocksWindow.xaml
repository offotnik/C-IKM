<Window x:Class="LibraryWPFApp.BlocksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Блокировки" Height="450" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Добавить" Width="90" Click="AddButton_Click"/>
            <Button Content="Сохранить" Width="90" Margin="5,0" Click="SaveButton_Click"/>
            <Button Content="Удалить" Width="90" Margin="5,0" Click="DeleteButton_Click"/>
            <Button Content="Обновить" Width="90" Margin="5,0" Click="RefreshButton_Click"/>
        </StackPanel>

        <DataGrid x:Name="BlocksGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single" SelectionUnit="FullRow" SelectionChanged="BlocksGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding BlockId}" Width="60"/>
                <DataGridTextColumn Header="Читатель ID" Binding="{Binding UserId}" Width="100"/>
                <DataGridTextColumn Header="Заблокирован" Binding="{Binding IsBlocked, StringFormat=\{0:да/нет\}}" Width="100"/>
                <DataGridTextColumn Header="Причина" Binding="{Binding BlockReason}" Width="150"/>
                <DataGridTextColumn Header="Оплачено" Binding="{Binding PaidAmount}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="2" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="Читатель:" VerticalAlignment="Center"/>
            <ComboBox x:Name="ReaderCombo" Grid.Column="1" Margin="5"
                      DisplayMemberPath="LastName" SelectedValuePath="UserId"/>

            <TextBlock Text="Заблокирован:" Grid.Row="1" VerticalAlignment="Center"/>
            <CheckBox x:Name="BlockedCheck" Grid.Row="1" Grid.Column="1" Margin="5"/>

            <TextBlock Text="Причина:" Grid.Row="2" VerticalAlignment="Center"/>
            <TextBox x:Name="ReasonBox" Grid.Row="2" Grid.Column="1" Margin="5"/>

            <TextBlock Text="Оплачено (руб):" Grid.Column="2" VerticalAlignment="Center"/>
            <TextBox x:Name="PaidBox" Grid.Column="3" Margin="5,0,0,0"/>
        </Grid>
    </Grid>
</Window>