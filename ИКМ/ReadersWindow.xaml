<Window x:Class="LibraryWPFApp.ReadersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Читатели" Height="600" Width="650">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Добавить" Width="90" Click="AddButton_Click"/>
            <Button Content="Сохранить" Width="90" Margin="5,0" Click="SaveButton_Click"/>
            <Button Content="Удалить" Width="90" Margin="5,0" Click="DeleteButton_Click"/>
            <Button Content="Обновить" Width="90" Margin="5,0" Click="RefreshButton_Click"/>
        </StackPanel>

        <DataGrid x:Name="ReadersGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single" SelectionUnit="FullRow" SelectionChanged="ReadersGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding UserId}" Width="60"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" Width="120"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" Width="120"/>
                <DataGridTextColumn Header="Отчество" Binding="{Binding MiddleName}" Width="120"/>
                <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="120"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="2" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="Фамилия:" VerticalAlignment="Center"/>
            <TextBox x:Name="LastNameBox" Grid.Column="1" Margin="5"/>

            <TextBlock Text="Имя:" Grid.Row="1" VerticalAlignment="Center"/>
            <TextBox x:Name="FirstNameBox" Grid.Row="1" Grid.Column="1" Margin="5"/>

            <TextBlock Text="Отчество:" Grid.Row="2" VerticalAlignment="Center"/>
            <TextBox x:Name="MiddleNameBox" Grid.Row="2" Grid.Column="1" Margin="5"/>

            <TextBlock Text="Дата рождения:" Grid.Row="3" VerticalAlignment="Center"/>
            <DatePicker x:Name="BirthDatePicker" Grid.Row="3" Grid.Column="1" Margin="5"/>

            <TextBlock Text="Телефон:" Grid.Row="4" VerticalAlignment="Center"/>
            <TextBox x:Name="PhoneBox" Grid.Row="4" Grid.Column="1" Margin="5"/>

            <TextBlock Text="Email:" Grid.Row="5" VerticalAlignment="Center"/>
            <TextBox x:Name="EmailBox" Grid.Row="5" Grid.Column="1" Margin="5"/>

            <TextBlock Text="Адрес:" Grid.Column="2" VerticalAlignment="Center"/>
            <TextBox x:Name="AddressBox" Grid.Column="3" Margin="5,0,0,0"/>

            <TextBlock Text="Выдаёт книги:" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center"/>
            <CheckBox x:Name="GetRentCheck" Grid.Row="1" Grid.Column="3" Margin="5,0,0,0"/>

            <TextBlock Text="Вернуть до:" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center"/>
            <DatePicker x:Name="MustReturnPicker" Grid.Row="2" Grid.Column="3" Margin="5,0,0,0"/>
        </Grid>
    </Grid>
</Window>